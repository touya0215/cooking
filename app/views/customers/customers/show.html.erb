<div class="container">
  <h3 style="width: 15%; text-align: center; margin: 40px; background: #EEEEEE">マイページ</h3>
  <div class="row">
    <div class="col-md-6">
      <h3>
        <b>　登録情報</b>
      </h3>
    </div>
    <div class="col-md-6">
      <h3 class="text-center">
        <b>　　投稿情報</b>
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="col-md-12" style="margin-bottom: 60px;">
        <div style="margin: 20px;">
          <%= link_to "編集する", edit_customer_path(current_customer.id), class:"margin: 20px; btn btn-success" %>
          <%= link_to "いいねした投稿", likes_customer_path(@customers) %>
        </div>
      </div>
      <table border="1">
        <tr>
          <td style="background: #EEEEEE">氏名</td>
          <td>
            <%= @customers.last_name %> <%= @customers.first_name %>
          </td>
        </tr>
        <tr>
          <td style="background: #EEEEEE">カナ</td>
          <td>
            <%= @customers.last_name_kama %> <%= @customers.first_name_kana %>
          </td>
        </tr>
        <tr>
          <td style="background: #EEEEEE">電話番号</td>
          <td><%= @customers.telephone_number %></td>
        </tr>
        <tr>
          <td style="background: #EEEEEE">メールアドレス　　　</td>
          <td><%= @customers.email %>　　　</td>
        </tr>
      </table>
    </div>
    <div class="col-md-4">
      <% @posts.each do |f| %>
          <div class="col-md-3" style="margin: 30px 0px;">
            <div class="margin: 10px;">
              <%= link_to post_path(f.id), class: 'text_light' do %>
                <%= image_tag f.image, :size => '200x150', class:"margin:10px;" %>
              <% end %>
            </div>
            <div class="margin: 10px;"><%= f.name %></div>
            <div class="margin: 10px;"><%= f.genre %></div>
          </div>
        <% end %>
    </div>
  </div>
</div>
