<div class="container">
  <h3 style="width: 11%;  text-align: center; margin-top: 15px; background: #EEEEEE">投稿編集</h3>
</div>
<div class="container">
  <%= form_with model: @posts, method: :patch do |f| %>
  <div class="form-group">
    <label for="book_title">商品画像</label>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <label for="book_opinion">商品名</label>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <label for="book_opinion">商品説明</label>
    <%= f.text_area :sentence %>
  </div>

  <div class="form-group">
    <label for="book_opinion">ジャンル</label>
    <%= f.select :genre, Post.genres.keys.map { |k| [I18n.t("enums.post.genre.#{k}"), k] }  %>
  </div>

  <div class="form-group">
    <%= f.submit '変更を保存', class:"btn btn-success" %>
  </div>
  <% end %>
</div>