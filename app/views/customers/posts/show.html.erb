<div class="container">
  <h3 style="width: 11%;  text-align: center; margin-top: 15px; background: #EEEEEE">投稿詳細</h3>
  <div class="row">
    <table>
      <div class=" col-md-3">
        <%= image_tag @posts.image, :size =>'150x150' %>
      </div>
      <div class="col-md-8">
        <tr>
          <td style="padding-right: 50px;">
            投稿名
          </td>
          <td>
            <%= @posts.name %>
          </td>
        </tr>
        <tr>
          <td style="padding-right: 50px;">
            作り方
          </td>
          <td>
            <%= @posts.sentence %>
          </td>
        </tr>
        <tr>
          <td style="padding-right: 50px;">
            ジャンル
          </td>
          <td>
            <%= @posts.genre_i18n %>
          </td>
        </tr>
      </div>
    </table>
  </div>
  <div class="row">
    <div class="text-center">
      <%= link_to "編集する", edit_post_path, class:"btn btn-sm btn-success" %>
    </div>
    <label>  　　　  　　　</label>
    <div class="text-center">
      <%= link_to "削除する", post_path, method: :delete, class:"btn btn-sm btn-danger" %>
    </div>
  </div>
</div>