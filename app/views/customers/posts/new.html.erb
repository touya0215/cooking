    <div class="container">
      <div class="row">
        <h3 style="width: 20%;  text-align: center; margin: 40px; background: #EEEEEE">新規投稿</h3>
      </div>
      <div class="text-center">
      <%= form_with model: @post,url: posts_path,method: :post do |f| %>
        <div class="form-group">
          <label for="book_title">投稿画像</label>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group">
          <label for="book_opinion">料理名</label>
          <%= f.text_field :name, size: "40" %>
        </div>

        <div class="form-group">
          <label for="book_opinion">料理工程</label>
          <%= f.text_area :sentence, size: "50x10" %>
        </div>

        <div class="form-group">
          <label for="book_opinion">ジャンル</label>
          <%= f.select :genre, Post.genres.keys.map { |g| [I18n.t("enums.post.genre.#{g}"), g] }, { include_blank: "指定なし" } %>
        </div>

        <div class="form-group">
          <%= f.submit '新規登録', class:"btn btn-success" %>
        </div>
      <% end %>
      </div>
    </div>